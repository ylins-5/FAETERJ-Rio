{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar e Rodar Java",
      "type": "shell",
      "command": "javac ${file} && java ${fileBasenameNoExtension}",
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/d", "/c"]
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$javac"
    }
  ]
}
